@model CGI.Reflex.Web.Areas.Applications.Models.Contacts.ContactLinkEdit

<div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Retrait d'un contact</h3>
    </div>
    <div class="modal-body">
    <p>Êtes-vous sûr de vouloir retirer le contact <strong>@Model.FullContactName</strong> de l'application <strong>@Model.ApplicationName</strong> ?</p>
    </div>
    <div class="modal-footer">
    @using (Html.BeginForm("RemoveLink", "Contacts"))
    {
        @Html.EditorFor(m => m.Id)
        <a class="btn btn-danger" data-submit-form="true"><i class="icon-remove icon-white"></i> Retirer</a>
        <a class="btn" data-dismiss="modal">Annuler</a>
    }
</div>