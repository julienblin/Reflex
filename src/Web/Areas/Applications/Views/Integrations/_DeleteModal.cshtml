@model CGI.Reflex.Web.Areas.Applications.Models.Integrations.IntegrationEdit

<div class="modal-header">
    <a class="close" data-dismiss="modal">×</a>
    <h3>Supprimer</h3>
    </div>
    <div class="modal-body">
    <p>Êtes-vous sûr de vouloir supprimer l'intégration <b>@Model.Name</b> entre <b>@Html.DisplayFor(m => m.AppSourceId)</b> et <b>@Html.DisplayFor(m => m.AppDestId)</b> ?</p>
    </div>
    <div class="modal-footer">
    @using (Html.BeginForm("Delete", "Integrations"))
    {
        @Html.EditorFor(m => m.Id)
        <a class="btn btn-danger" data-submit-form="true"><i class="icon-remove icon-white"></i> Supprimer</a>
        <a class="btn" data-dismiss="modal">Annuler</a>
    }
</div>