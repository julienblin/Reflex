@model CGI.Reflex.Core.Entities.Event

<div class="well well-mini">
    <div class="row-fluid">
        <div class="span2">
            <div class="row-fluid">
                <div class="span12">@Model.Date.ToShortDateString()</div>
            </div>
            <div class="row-fluid">
                <div class="span12">@Model.Type.Name</div>
            </div>
            <div class="row-fluid">
                <div class="span12">@Model.Source</div>
            </div>
                                        
        </div>
        <div class="span10">
            <div style="float:right;margin-left:10px;">
                @if (IsActionAllowed("Edit"))
                {
                    <a href="@Url.Action("Edit", "Events", new { id = Model.Id })" class="btn btn-mini" rel="tooltip" title="Éditer"><i class="icon-pencil"></i></a>
                }

                @Html.HistoryLink("Event", Model.Id, "btn-mini", "Voir l'historique")

                @if (IsActionAllowed("Delete"))
                {
                    @Ajax.ModalActionLinkRaw("<i class=\"icon-remove icon-white\"></i>", "Delete", "Events", new { id = Model.Id }, new { @class = "btn btn-danger btn-mini", rel = "tooltip", title = "Supprimer" })
                }
            </div>
            @Html.FormattedText(Model.Description)
        </div>
    </div>
</div>